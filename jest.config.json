{
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "transform": {
    "^.+\\.(ts?|tsx?)$": "ts-jest"
  },
  "testMatch": ["**/__tests__/**/*.ts?(x)", "**/?(*.)+(spec|test).ts?(x)"],
  "setupFiles": ["<rootDir>/tests/setupTests.ts"],
  "globals": {
    "ts-jest": {
      "diagnostics": false
    }
  }
}
